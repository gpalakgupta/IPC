class Solution {
    public int[] asteroidCollision(int[] asteroids) {
        Stack<Integer> st = new Stack<>();
        int n = asteroids.length;
        for(int i = 0; i<n; i++){
            int el = asteroids[i];
            if(st.isEmpty()){
                st.push(i);
            }
            else{
                 while(!st.isEmpty() && asteroids[st.peek()] > 0 && el < 0){
                    int top = asteroids[st.peek()];
                    if(Math.abs(top) == Math.abs(el)){
                        st.pop();
                        el = 0;
                        break;
                    }
                    else if(Math.abs(top) < Math.abs(el)){
                        st.pop();
                    }
                    else{
                        el = 0;
                        break;
                    }
                 }
                 if(el != 0){
                    st.push(i);
                 }
            }
        }
        int ans[] = new int[st.size()];
        int i = 0;
        for(int el : st){
            ans[i++] = asteroids[el];
        }
        return ans;
    }
}

import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int k = sc.nextInt();
        String s = sc.next();

        System.out.println(Math.max(maxSubstring(s, n, k, 'a'), maxSubstring(s, n, k, 'b')));
    }

    static int maxSubstring(String s, int n, int k, char ch) {
        int left = 0, right = 0, changes = 0, maxLen = 0;

        while (right < n) {
            if (s.charAt(right) != ch) changes++;

            while (changes > k) {
                if (s.charAt(left) != ch) changes--;
                left++;
            }

            maxLen = Math.max(maxLen, right - left + 1);
            right++;
        }

        return maxLen;
    }
}

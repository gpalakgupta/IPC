import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        
        while (t-- > 0) {
            int n = sc.nextInt();
            int k = sc.nextInt();
            int[] a = new int[n + 1];
            for (int i = 1; i <= n; i++) {
                a[i] = sc.nextInt();
            }

            int[] isPeak = new int[n + 1];
            for (int i = 2; i < n; i++) {
                if (a[i] > a[i - 1] && a[i] > a[i + 1]) {
                    isPeak[i] = 1;
                }
            }

            int[] pref = new int[n + 1];
            for (int i = 1; i <= n; i++) {
                pref[i] = pref[i - 1] + isPeak[i];
            }

            int bestL = 1, maxPeaks = -1;

            for (int l = 1; l + k - 1 <= n; l++) {
                int r = l + k - 1;
                // count peaks in (l, r), i.e. from l+1 to r-1
                int peaks = pref[r - 1] - pref[l];
                if (peaks > maxPeaks) {
                    maxPeaks = peaks;
                    bestL = l;
                }
            }

            System.out.println((maxPeaks + 1) + " " + bestL);
        }
    }
}

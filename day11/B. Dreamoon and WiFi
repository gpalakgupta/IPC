import java.util.Scanner;

public class Main {
    static int totalWays = 0;
    static int correctWays = 0;
    static int target;

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String s1 = sc.next();  // Original commands
        String s2 = sc.next();  // Received commands

        int pos1 = 0;
        for (char c : s1.toCharArray()) {
            if (c == '+') pos1++;
            else pos1--;
        }

        target = pos1;

        int current = 0;
        for (char c : s2.toCharArray()) {
            if (c == '+') current++;
            else if (c == '-') current--;
        }

        int unknown = 0;
        for (char c : s2.toCharArray()) {
            if (c == '?') unknown++;
        }

        dfs(current, unknown);

        double probability = (double) correctWays / totalWays;
        System.out.printf("%.12f%n", probability);
    }

    static void dfs(int current, int unknownLeft) {
        if (unknownLeft == 0) {
            totalWays++;
            if (current == target) correctWays++;
            return;
        }

        // Try '+' for '?'
        dfs(current + 1, unknownLeft - 1);

        // Try '-' for '?'
        dfs(current - 1, unknownLeft - 1);
    }
}

import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int q = sc.nextInt();  // number of test cases
        
        while (q-- > 0) {
            int n = sc.nextInt();
            long k = sc.nextLong();  // moves available
            String s = sc.next();
            char[] arr = s.toCharArray();

            int onesBefore = 0;
            StringBuilder result = new StringBuilder();

            // Create a list to build the output more efficiently
            char[] res = new char[n];
            Arrays.fill(res, '1');

            for (int i = 0; i < n; i++) {
                if (arr[i] == '1') {
                    onesBefore++;
                } else { // it's '0'
                    long moves = Math.min(k, onesBefore);
                    int newPos = (int) (i - moves);
                    res[newPos] = '0';
                    k -= moves;
                    // Fill 1s between moved position and this 0 if needed
                }
            }

            // Fill remaining '1's where no '0' is placed
            for (int i = 0; i < n; i++) {
                if (res[i] != '0') res[i] = '1';
            }

            System.out.println(new String(res));
        }
    }
}

class Solution {
    public int[] nextGreaterElements(int[] nums) {
        int n = nums.length;
        int[] arr = new int[2*n];
        for(int i = 0; i<arr.length; i++){
            arr[i] = nums[i%n];
        }
        boolean[] ans = new boolean[n];
        Stack<Integer> st = new Stack<>();
        for(int i = 0; i<arr.length; i++){
            while(!st.isEmpty() && arr[i] > arr[st.peek()]){
                if(st.peek() < n){
                    ans[st.peek()] = true;
                    nums[st.pop()] = arr[i];
                }
                else{
                    st.pop();
                }
            }
            st.push(i);
        }
        for(int i = 0; i<n; i++){
            if(ans[i] == false){
                nums[i] = -1;
            }
        }
        return nums;
    }
}

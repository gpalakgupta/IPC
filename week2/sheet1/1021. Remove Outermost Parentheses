class Solution {
    public String removeOuterParentheses(String s) {
        StringBuilder sb = new StringBuilder();
        int outer = 0;
        for(int i = 0; i<s.length(); i++){
            char ch = s.charAt(i);
            if(ch == '('){
                outer++;
                if(outer > 1){
                    sb.append(ch);
                }
            }
            else{
                outer--;
                if(outer > 0){
                    sb.append(ch);
                }
            }
        }
        return sb.toString();
    }
}

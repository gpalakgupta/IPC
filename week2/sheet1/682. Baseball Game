class Solution {
    public int calPoints(String[] operations) {
        Stack<Integer> st = new Stack<>();
        for(String s : operations){
            if(s.equals("+")){
                int e1 = st.pop();
                int e2 = st.pop();
                st.push(e2);
                st.push(e1);
                st.push(e1+e2);
                
            }
            else if(s.equals("C")){
                st.pop();
            }
            else if(s.equals("D")){
                int e1 = st.peek();
                st.push(2*e1);
            }
            else{
                st.push(Integer.valueOf(s));
            }
        }

        int sum = 0;
        for(int el : st){
            sum += el;
        }
        return sum;
    }
}
